<!DOCTYPE html>
<html lang="pt-br">

<head>
  <title>Historico</title>

  <!--Só para teste precisar mudar-->
  <link rel="stylesheet" href="/PageHistorico/css/style.css" type="text/css">
  <link rel="stylesheet" href="/PageHistorico/css/responsive.css" type="text/css">
  <link rel="stylesheet" href="/PageHistorico/css/colors.css" type="text/css">

  <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-solid-rounded/css/uicons-solid-rounded.css'>
  <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>
  <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<body>
  <main>
    <div class="container-my">
      <nav class="nav-bar">
        <div class="nav-bar-lg">
          <a href="/">
            <img class="logo" src="/Logo/Logo.png" alt="logo-marca">
          </a>
        </div>
        <div class="nav-bar-perfil">
          <div class="perfil-user">
            <a href="/logout">
              <p>Olá,&nbsp;<span><%= names %></span></p>
            </a>
          </div>
        </div>
      </nav>

      <div class="content">
        <div class="tool-bar">
          <div class="tb-space"></div>
          <div class="nav-icon">
            <a href="/">
              <i class="fi fi-sr-home"></i>
            </a>
          </div>
          <div class="nav-icon">
            <a href="/Livros">
              <i class="fi fi-rr-book-alt"></i>
            </a>
          </div>
          <div class="nav-icon">
            <a href="/historico">
                <i class="fi fi-rr-refresh"></i>
            </a>
        </div>
        <div class="nav-icon">
            <a href="/calendario">
                <i class=
                "fi fi-rr-calendar"
                ></i>
            </a>
        </div>
          <div class="nav-icon">
            <a href="/alterarUsuario">
              <i class="fi fi-rr-settings"></i>
            </a>
          </div>
        </div>
        <div class="desktop">
          <div class="blur-background"></div>
          <div class="nav-bar-desktop">
            <div class="nav-bar-mobile">
              <div class="hamburguer">
                <img src="img/hamburguer.png" alt="hamburguer">
              </div>
            </div>
            <div class="nav-bar-desktop-texto">
              <p><span>Home</span></p>
              <h5>/</h5>
              <h5><span>Histórico</span></h5>
            </div>
          </div>
          <div class="mobile-menu">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/livros">Livros</a></li>
<li><a href="/download">Ajuda</a></li>
              <li><a href="#">Ajuda</a></li>
              <li><a href="/alterarUsuario">Configuração</a></li>
            </ul>
          </div>
          <div class="content-desktop">
            <div class="atalhos-desktop">

              <div class="atalhos-desktop-title">
                <h1>Histórico</h1>
              </div>

              <div class="desktop-container">
                <table style="width: -webkit-fill-available">

                  <thead>
                    <tr>
                      <th>Livro: </th>
                      <th>Titulo : </th>
                      <th>Edição: </th>
                      <th>Codigo: </th>
                      <th>Situação: </th>
                      <th>Controle: </th>
                    </tr>
                  </thead>


                  <tbody>
                    <% books.forEach(function(book) { %>
                      <div class="overlay"></div>
                      <div class="zoom-frame">
                          <div class="Historico-Expandido">
                            <% historic.forEach(function(hist) { %>
                              <% if ( book.id_action == hist.id_action) { %>
                                  <div class="history-entry">
                                <p>Data: <%= new Intl.DateTimeFormat('pt-BR').format(hist.date) %> - Status: 
                                  <%= 
                                  hist.status_book === "R" ? "Reservado" :
                                  hist.status_book === "D" ? "Disponível" :
                                  hist.status_book === "E" ? "Em Empréstimo" :
                                  hist.status_book === "C" ? "Cancelado" :
                                  hist.status_book === "P" ? "Pendente" :
                                  hist.status_book === "F" ? "Finalizado/Concluído" :
                                                              "Outro status" 
                                  %>
                                </p>
                              </div>
                                <%} %>
                            <% }); %>
                      </div>
                    </div>

              </div>
            </div>
            <tr>
              <!--<td><img src="https://placehold.co/60" alt="placehold"></td>-->
              <td> <img src="data:image/jpeg;base64,<%= book.foto.toString('base64') %>" alt="Capa Livro"></td>
              <td> <%= book.title %></td>
              <td> <%= book.edition %> </td>
              <td> <%= book.code %></td>
              <td>
                <% 
                  let situacao = book.status;
                  situacao = (situacao == "R") ? "Reservado" :
                            (situacao == "D") ? "Disponível" :
                            (situacao == "E") ? "Em Empréstimo" :
                            (situacao == "C") ? "Cancelado" :
                            (situacao == "P") ? "Pendente" :
                            (situacao == "F") ? "Finalizado/Concluído" :
                            "Outro status";
                %>
                <%= situacao %>
              </td>
              <td>
                <button class="button_one zoomable">view</button>
              </td>
            </tr>
          </div>
          <% }); %>
          </tbody>
          </table>
          </form>
        </div>

      </div> <!-- atalhos-desktop -->
    </div>
    <div class="rodape-desktop">
      <div class="rodape-desktop-texto">
        <p>WBuilders</p>
        <h5>| Versão 1.0.0.2</h5>
      </div>
    </div>
    </div>
    </div>
    <script src="/PageEmprestimo/js/script.js"></script>
    <script src="../Historico/historico.js"></script>
    <script src="/PageLivro/script.js"></script>
    <script src=" /PageLivro/script.js"></script>
    </div> <!-- container -->
  </main>
</body>

</html>